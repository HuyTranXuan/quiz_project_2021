<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <meta charset="utf-8">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <style>
    html,body {
      font-family: 'Montserrat';
      color: black;
      background: linen;
    }

    h2 {
      color: black;
      font-size: 4em;
      margin: 1em auto;
      width: 70%;
    }
    h3 {
      font-size: 3em;
      margin: 1em auto;
      width: 70%;
    }
    input {
      margin: .5em;
    }
    a {
      background-color: #F2511B;
      border: none;
      color: white;
      padding: .8em .95em;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: .95em;
      font-weight: 600;
      border-radius: 2px;
      cursor: pointer;
      transition: 0.3s;
    }
    a:hover {
      background-color: white;
      text-decoration: none;
      color: #F2511B;
    }
    ul {
      list-style-type: none;
      margin: 0 3em 0 auto;
      padding: 0;
      padding-top: .85em;
      display: grid;
      align-items: center;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      width: 90%;
    }
    .statistics{
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
    span {
      color: gray;
      font-size: .95em;
      margin-top: 20px;
      inline-size: 150px; 
      overflow: hidden;
      align-content: center;
      display: flex;
      flex-wrap: wrap;
    }

    li {
      color: gray;
      width: 100%;
      padding: 20px auto 20px auto;
      margin: 20px auto 20px auto;
      display: inline-block;
      font-size: 16px;
      border-radius: 2px;
      border-color: black;
      float: left;
    }
    .nav_bar {
      width: 100%;
      position: relative;
    }
    textarea {
      margin-left: .5em;
    }
  </style>
  </head>
  <body>
    <% if (it.user) { %>
    <nav class="border fixed split-nav">
        <div class="nav-brand">
            <h3>Hello <%= it.user.email %>.</a></h3>
        </div>
        <div class="collapsible">
            <input id="collapsible1" type="checkbox" name="collapsible1">
            <label for="collapsible1">
            <div class="bar1"></div>
            <div class="bar2"></div>
            </label>
            <div class="collapsible-body">
                <ul class="inline">
                    <li><a href="/questions">Your questions</a></li>
                    <li><a href="/quiz">Take quiz</a></li>
                    <li><a href="/statistics">Statistics</a></li>
                </ul>
            </div>
        </div>
    </nav>
  <% } %>
  <div class="nav_bar">
    <ul>
    <li>
      <a href="/">Home</a>
      <span>Home page</span>
    </li>
    <li>
      <a href="/auth/register">Register</a>
      <span>Join in!</span>
    </li>
    <li>
      <a href="/auth/login">Log in</a>
      <span>Try features</span>
    </li>
    <li>
      <a href="/questions">Your questions</a>
      <span>Your question list</span>
    </li>
    <li>
      <a href="/quiz">Quiz</a>
      <span>Take on quizzes</span>
    </li>
    <li>
      <a href="/statistics">Statistic</a>
      <span>Your statistics</span>
    </li>
    <li>
      <a href="/api/questions/random">Api</a>
      <span>Quiz API</span>
    </li>
    </ul>
  </div>
    <div class="container paper">
    <br>
    <%~ it.body %>
    </div>
  </body>
</html>